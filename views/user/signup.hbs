<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5">
            <h2 class="text-center">Create New Account</h2>
            {{#if error}}
            <div class="alert alert-danger" role="alert">
                {{error}}
            </div>
            {{/if}}
            <form action="/signup" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="Name" placeholder="Enter Name" value="{{values.Name}}" required>
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" name="Email" placeholder="Enter Email" value="{{values.Email}}" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="Enter Password" minlength="6" required>
                </div>
                <a href="/login">Already have account?</a>
                <button type="submit" class="btn btn-primary float-right">Sign Up</button>
            </form>
        </div>
    </div>
</div>