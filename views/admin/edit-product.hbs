<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" class="form-control" value="{{product.name}}" required>

                    <label for="category" class="mt-3">Category</label>
                    <input type="text" name="category" id="category" class="form-control" value="{{product.category}}" required>

                    <label for="price" class="mt-3">Price</label>
                    <input type="number" name="price" id="price" class="form-control" value="{{product.price}}" required>

                    <label for="description" class="mt-3">Description</label>
                    <textarea name="description" id="description" class="form-control" required>{{product.description}}</textarea>

                    <div class="mt-3">
                        <label for="image">Current Image</label><br>
                        <img src="{{product.image}}" alt="{{product.name}}" style="width: 100px; height: 100px; object-fit: cover;">
                    </div>

                    <label for="image" class="mt-3">Change Image</label>
                    <input type="file" name="image" id="image" class="form-control">
                    <small class="text-muted">Leave empty to keep current image</small>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-success">Update Product</button>
                        <a href="/admin" class="btn btn-secondary ml-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>